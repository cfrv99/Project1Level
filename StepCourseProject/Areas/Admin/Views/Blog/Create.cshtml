@model BlogAdminPageVM
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Create</h1>

<form asp-action="Create" asp-controller="Blog" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="BlogName">Blog Title</label>
        <input type="text" class="form-control" asp-for="BlogName" placeholder="Name">
    </div>
    <div class="form-group">
        <label asp-for="BlogUrl">Blog Sluck Url</label>
        <input type="text" class="form-control" asp-for="BlogUrl" placeholder="Url">
    </div>
    <div class="form-group">
        <textarea asp-for="BlogDesc" id="editor"></textarea>
    </div>
    <input class="btn btn-success" type="submit" value="Submit" />
</form>

@section scripts{
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/Trumbowyg-master/dist/trumbowyg.min.js"></script>
    <script>
        $('#editor').trumbowyg();
    </script>
}