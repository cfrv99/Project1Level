@model DetailViewModel
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:100px;">



    <div class="post-bar">
        <div class="post_topbar">
            <div class="usy-dt">
                <img src="~/ClientView/images/resources/us-pic.png" alt="">
                <div class="usy-name">
                    <h3>@Model.PostName</h3>
                    <span><img src="images/clock.png" alt="">3 min ago</span>
                </div>
            </div>
            <div class="ed-opts">
                <a href="#" title="" class="ed-opts-open"><i class="la la-ellipsis-v"></i></a>
                <ul class="ed-options">
                    <li><a asp-action="Profile" asp-controller="Account" asp-route-userId="@Model.UserId" title="">Author Profile</a></li>

                </ul>
            </div>
        </div>
        <div class="epi-sec">
            <ul class="descp">
                <li><img src="images/icon8.png" alt=""><span>Developer</span></li>
                <li><img src="images/icon9.png" alt=""><span>India</span></li>
            </ul>
            <ul class="bk-links">
            </ul>
        </div>
        <div class="job_descp">
            <h3>@Model.PostDescription</h3>
            <ul class="job-dt">
                <li><span>$@Model.PostStartPrice - $@Model.PostEndPrice</span></li>
            </ul>
            <p> <a href="#" title="">view more</a></p>
            <ul class="skill-tags">
                <li><a href="#" title="">@Model.PostSkillName</a></li>

            </ul>
        </div>
        <div class="job-status-bar">
            <ul class="like-com">
                <li>
                    <a href="#" class="active"><i class="fas fa-heart"></i> Like</a>
                    <img src="images/liked-img.png" alt="">
                    <span>25</span>
                </li>
                <li><a href="#" class="com"><i class="fas fa-comment-alt"></i> Bids @Model.PostDeadLine</a></li>
            </ul>
            <a href="#"><i class="fas fa-eye"></i>Views 50</a>
        </div>
    </div>
    <div class="container-fluid  shadow p-3 mb-5 bg-white rounded" style="margin-top:150px;">

        <form asp-action="CreateBid" asp-controller="Project" method="post">
            <div class="form-group">
                <input type="hidden" class="form-control" asp-for="CreateBid.PostId" value="@Model.Id">
                <label asp-for="CreateBid.BidPrice">Supply Price</label>
                <input type="number" class="form-control mt-2" asp-for="CreateBid.BidPrice">
            </div>
            <div class="form-group">
                <label asp-for="CreateBid.BidBody">Bid Body</label>
                <textarea class="form-control mt-2" asp-for="CreateBid.BidBody" rows="3"></textarea>
            </div>
            
            <div class="form-group">
                <input type="submit" class="btn btn-secondary" value="Supply" />
            </div>
        </form>
    </div>
</div>
