@model IEnumerable<MessageListViewModel>
<div class="inbox_chat">

@inject Microsoft.AspNetCore.Identity.UserManager<StepCourseProject.Entites.AppUser> userManager
    <!--active_chat-->

    
    @foreach (var item in Model)
    {

        <a asp-action="SendMessage" asp-controller="Message" asp-route-userId="@item.UserId">
        <div class="chat_list @(item.UserId==ViewBag.Active ? "active_chat" : "" )">
            <div class="chat_people">
                
                <div class="chat_img"> <img src="https://ptetutorials.com/images/user-profile.png" alt="sunil"> </div>
                <div class="chat_ib">
                    <h5>@item.MessagerSenderName <span class="chat_date">@ViewBag.Date @if(item.OnlineStatus==true){ <span class="ml-1 badge badge-success badge-counter"> </span>}</span></h5>
                    <p>
                        @item.MessageText
                    </p>
                </div>
            </div>
        </div>

        </a>

    }


</div>
